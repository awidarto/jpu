<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:longClickable="false"
        android:padding="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Order"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblOrderNumber"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Code"
                android:gravity="right"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblTrxId"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembeli"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblBuyer"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_toRightOf="@+id/lblBuyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/buyer_name"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="gravity"
                android:gravity="right" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penerima"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblRecipient"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_toRightOf="@+id/lblRecipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/recipient_name"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="gravity"
                android:gravity="right" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Pengiriman"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblDeliverytype"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="24dp" />

            <TextView
                android:layout_toRightOf="@+id/lblDeliverytype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/deliverytype"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="gravity"
                android:gravity="right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kota"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblDeliverycity"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="24dp" />

            <TextView
                android:layout_toRightOf="@+id/lblDeliverycity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="8dp"
                android:id="@+id/deliverycity"
                android:layout_alignParentEnd="true"
                android:gravity="right" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecamatan"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblDeliveryzone"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="24dp" />

            <TextView
                android:layout_toRightOf="@+id/lblDeliveryzone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="8dp"
                android:id="@+id/deliveryzone"
                android:layout_alignParentEnd="true"
                android:textAlignment="gravity"
                android:gravity="right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblweight"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="24dp" />

            <TextView
                android:layout_toRightOf="@+id/lblweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="8dp"
                android:id="@+id/weight"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:textAlignment="gravity" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai / Harga Paket"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblPrice"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_toRightOf="@id/lblPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="8dp"
                android:id="@+id/unit_price"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:textAlignment="gravity" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongkos Kirim"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/lblDeliverycost" />
            <TextView
                android:layout_toRightOf="@+id/lblDeliverycost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/deliverycost"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="gravity" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COD Surcharge"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/lblCODSurcharge" />
            <TextView
                android:layout_toRightOf="@+id/lblCODSurcharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/codsurcharge"
                android:gravity="right"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="gravity" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:drawableLeft="@drawable/ic_action_discard"
                android:id="@+id/bt_del"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_cancel"
                android:drawableLeft="@drawable/ic_action_remove"
                android:id="@+id/bt_cancel"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/bt_edit"
                android:layout_toRightOf="@+id/bt_del" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:drawableLeft="@drawable/ic_action_edit"
                android:id="@+id/bt_edit"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="10sp"
                android:id="@+id/lblPicAddress"
                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:background="@color/lightgrey"
                android:id="@+id/pic_address"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Samping"
                android:textSize="10sp"
                android:id="@+id/lblPic1" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="@color/lightgrey"
                android:clickable="true"
                android:id="@+id/pic_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Depan"
                android:textSize="10sp"
                android:id="@+id/lblPic2" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:background="@color/lightgrey"
                android:id="@+id/pic_2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Atas"
                android:textSize="10sp"
                android:id="@+id/lblPic3" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:background="@color/lightgrey"
                android:id="@+id/pic_3" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>